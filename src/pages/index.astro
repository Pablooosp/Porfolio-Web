---
import Contact from '../components/Contact.astro';
import Home from '../components/Home.astro';
import InfoCard from '../components/InfoCard.astro';
import MainCard from '../components/MainCard.astro';
import NavMenu from '../components/NavMenu.astro';
import Projects from '../components/Projects.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<header class="lg:flex w-[95vw] 2xl:w-[75vw] lg:h-[15vh] h-[10vh] mx-auto lg:justify-end lg:items-center">
		<NavMenu></NavMenu>
	</header>
	<main>
		<section id="mainSection" class="w-[95vw] lg:h-[500px] xl:h-[650px] 2xl:h-[550px] mx-auto lg:grid lg:grid-cols-3 gap-4 block h-[140vh]">

			<InfoCard></InfoCard>
	
			<MainCard>
				<Home></Home>
				<Projects></Projects>
				<Contact></Contact>
			</MainCard>
			
		</section>
	</main>
</Layout>

<style>
	@media (min-height: 900px){

		#mainSection{
		height: 700px;
		}
	}
	
</style>
