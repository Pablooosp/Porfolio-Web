---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="stylesheet" href="/node_modules/reveal.js/dist/reveal.css">
		<link rel="stylesheet" href="/node_modules/reveal.js/dist/theme/black.css">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;700;800;900&family=Onest:wght@800&family=Russo+One&display=swap" rel="stylesheet">
		<script src="https://kit.fontawesome.com/a900858c50.js" crossorigin="anonymous"></script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-screen bg-[#e6ecde]">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	body{
		font-family: 'Inter', sans-serif;
		font-weight: 900;
	}
	::-webkit-scrollbar{
        background-color: #fff;
        width: 16px;
    }
    ::-webkit-scrollbar-track{
        background-color: #e6ecde;
	}
	::-webkit-scrollbar-thumb{
        background-color: #babac0;
        border-radius: 16px;
        border: 4px solid #e6ecde;
    }
	
</style>
